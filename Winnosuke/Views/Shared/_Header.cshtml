@{
    var username = ViewData["username"] as string ?? "";
    var fullname = ViewData["fullname"] as string ?? "";
}

<header class="header" style="background: #f8f9fa; border-bottom: 1px solid #ddd;">
    <div class="container">
        <div class="row align-items-center">
            <!-- Logo bên trái -->
            <div class="col-lg-2 col-md-3 col-4">
                <div class="header__logo">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/layout1/img/logo2.png" alt="MyGarage Logo" style="height: 50px;" />
                    </a>
                </div>
            </div>

            <!-- Menu giữa -->
            <div class="col-lg-6 col-md-6 d-none d-md-block">
                <nav class="header__menu">
                    <ul class="d-flex justify-content-center gap-3 mb-0">
                        <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                            <a href="@Url.Action("Index", "Home")">Trang chủ</a>
                        </li>
                        <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Services" ? "active" : "")">
                            <a href="@Url.Action("Index", "Services")">Dịch vụ</a>
                        </li>
                        <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AddAppointment" ? "active" : "")">
                            <a href="@Url.Action("Create", "AddAppointment")">Đặt lịch</a>
                        </li>
                        <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Garages" ? "active" : "")">
                            <a href="@Url.Action("Index", "Garages")">Garage</a>
                        </li>
                        <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")">
                            <a href="@Url.Action("Contact", "Home")">Liên hệ</a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Social + Auth bên phải -->
            <div class="col-lg-4 col-md-3 col-8">
                <div class="d-flex justify-content-end align-items-center gap-3">
                    <!-- Social -->
                    <div class="header__top__right__social d-none d-md-flex">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-linkedin"></i></a>
                        <a href="#"><i class="fa fa-pinterest-p"></i></a>
                    </div>

                    <!-- Auth -->
                    <div class="header__top__right__auth">
                        @if (string.IsNullOrEmpty(username))
                        {
                            <a href="@Url.Action("Login", "AccountLogin")" class="me-2"><i class="fa fa-user"></i> Đăng nhập</a>
                            <a href="@Url.Action("Register", "AccountRegister")"><i class="fa fa-user"></i> Đăng kí</a>
                        }
                        else
                        {
                            <span><i class="fa fa-user"></i> Xin chào, @fullname</span>
                            <a href="@Url.Action("Logout", "AccountLogin")" class="ms-2">Đăng xuất</a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Hamburger cho mobile -->
        <div class="humberger__open d-block d-lg-none mt-2 text-end">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>
