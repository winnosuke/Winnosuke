@model List<Winnosuke.Models.Appointment>
@{
    ViewData["Title"] = "Danh sách lịch hẹn";
}

<h2>Danh sách lịch hẹn</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Khách hàng</th>
            <th>Phương tiện</th>
            <th>Dịch vụ</th>
            <th>Thời gian</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User?.FullName</td>
                <td>@item.Vehicle?.LicensePlate</td>
                <td>@item.Service?.ServiceName</td>
                <td>@item.AppointmentTime.("dd/MM/yyyy HH:mm")</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AppointmentId">Chi tiết</a> |
                    <a asp-action="Edit" asp-route-id="@item.AppointmentId">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.AppointmentId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Đặt lịch mới</a>
