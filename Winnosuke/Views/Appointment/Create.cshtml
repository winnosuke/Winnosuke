@model Winnosuke.Models.Appointment
@{
    ViewData["Title"] = "Đặt lịch hẹn";
}

<h2>Đặt lịch hẹn</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="UserId"></label>
        <input asp-for="UserId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="VehicleId"></label>
        <input asp-for="VehicleId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GarageId"></label>
        <input asp-for="GarageId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ServiceId"></label>
        <input asp-for="ServiceId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TechnicianId"></label>
        <input asp-for="TechnicianId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AppointmentTime"></label>
        <input asp-for="AppointmentTime" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
