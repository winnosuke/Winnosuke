@model Winnosuke.Models.Review
@{
    ViewData["Title"] = "Viết đánh giá";
}

<h2>Viết đánh giá Garage</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="GarageId">Garage ID</label>
        <input asp-for="GarageId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Rating">Số sao (1-5)</label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
    </div>
    <div class="form-group">
        <label asp-for="Comment">Nhận xét</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Gửi đánh giá</button>
    <a asp-action="MyReviews" class="btn btn-secondary">Hủy</a>
</form>
