@model Winnosuke.Models.GarageSchedule
@{
    ViewData["Title"] = "Cập nhật lịch làm việc";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]" method="post">
    <div class="form-group">
        <label asp-for="GarageId"></label>
        <input asp-for="GarageId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DayOfWeek"></label>
        <input asp-for="DayOfWeek" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OpenTime"></label>
        <input asp-for="OpenTime" class="form-control" type="time" />
    </div>
    <div class="form-group">
        <label asp-for="CloseTime"></label>
        <input asp-for="CloseTime" class="form-control" type="time" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
