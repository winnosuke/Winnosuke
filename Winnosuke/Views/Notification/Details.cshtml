@model Winnosuke.Models.Notification
@{
    ViewData["Title"] = "Chi tiết thông báo";
}

<h2>Chi tiết thông báo</h2>

<div class="mb-3">
    <strong>Tiêu đề:</strong> @Model.Title
</div>
<div class="mb-3">
    <strong>Nội dung:</strong>
    <p>@Model.Message</p>
</div>
<div class="mb-3">
    <strong>Ngày:</strong> @Model.CreatedAt.("dd/MM/yyyy HH:mm")
</div>
<a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
