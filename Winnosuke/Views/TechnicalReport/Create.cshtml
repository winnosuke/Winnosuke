@model Winnosuke.Models.TechnicalReport
@{
    ViewData["Title"] = "Tạo báo cáo kỹ thuật";
}

<h2>Tạo báo cáo kỹ thuật</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="AppointmentId"></label>
        <input asp-for="AppointmentId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="VehicleStatus"></label>
        <textarea asp-for="VehicleStatus" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="PerformedItems"></label>
        <textarea asp-for="PerformedItems" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Recommendations"></label>
        <textarea asp-for="Recommendations" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Gửi báo cáo</button>
    <a asp-action="MyReports" class="btn btn-secondary">Hủy</a>
</form>
