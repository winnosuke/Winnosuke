@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section id="hero" class="hero-section position-relative">
    <video autoplay muted loop playsinline class="hero-video">
        <source src="~/videos/hero.mp4" type="video/mp4">
        Trình duyệt của bạn không hỗ trợ video HTML5.
    </video>
    <div class="hero-overlay"></div>
    <div class="hero-text text-white">
        <h1>Dịch vụ bảo dưỡng ô tô chuyên nghiệp</h1>
        <p>Đội ngũ kỹ thuật viên giàu kinh nghiệm, trang thiết bị hiện đại</p>
        <a href="@Url.Action("Create", "Appointments")" class="btn btn-primary btn-lg">Đặt lịch ngay</a>
    </div>
    <div class="scroll-indicator">
        <span>SCROLL</span>
        <a href="#main-content"><i class="fa fa-angle-down"></i></a>
    </div>
</section>

<!-- Services Section -->
<section id="main-content" class="services-section py-5">
    <div class="container">
        <h2 class="section-title text-center mb-5">Dịch vụ của chúng tôi</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <div class="service-icon"><i class="fa fa-car"></i></div>
                    <h3>Bảo dưỡng định kỳ</h3>
                    <p>Kiểm tra và bảo dưỡng toàn diện theo khuyến nghị của nhà sản xuất</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <div class="service-icon"><i class="fa fa-wrench"></i></div>
                    <h3>Sửa chữa chuyên sâu</h3>
                    <p>Khắc phục các vấn đề về động cơ, hệ thống điện và cơ khí</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <div class="service-icon"><i class="fa fa-paint-brush"></i></div>
                    <h3>Chăm sóc ngoại thất</h3>
                    <p>Rửa xe, đánh bóng, phủ ceramic và các dịch vụ làm đẹp xe</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- News Section -->
<section class="news-section py-5 bg-light">
    <div class="container">
        <h2 class="section-title text-center mb-5">Tin tức & Sự kiện</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="news-card">
                    <img src="~/images/news-1.jpg" class="img-fluid" alt="News 1">
                    <div class="news-content">
                        <h4>Khuyến mãi tháng 5</h4>
                        <p>Giảm giá 20% cho dịch vụ bảo dưỡng định kỳ</p>
                        <a href="#" class="btn btn-outline-primary">Xem thêm</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="news-card">
                    <img src="~/images/news-2.jpg" class="img-fluid" alt="News 2">
                    <div class="news-content">
                        <h4>Workshop bảo dưỡng xe</h4>
                        <p>Hướng dẫn cách tự bảo dưỡng xe tại nhà</p>
                        <a href="#" class="btn btn-outline-primary">Xem thêm</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="news-card">
                    <img src="~/images/news-3.jpg" class="img-fluid" alt="News 3">
                    <div class="news-content">
                        <h4>Mở rộng chi nhánh</h4>
                        <p>Thông báo khai trương chi nhánh mới tại Quận 7</p>
                        <a href="#" class="btn btn-outline-primary">Xem thêm</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Partners Section -->
<section class="partners-section py-5">
    <div class="container">
        <h2 class="section-title text-center mb-5">Đối tác của chúng tôi</h2>
        <div class="row align-items-center">
            <div class="col-md-3 col-6 mb-4">
                <img src="~/images/partner-1.png" class="img-fluid" alt="Partner 1">
            </div>
            <div class="col-md-3 col-6 mb-4">
                <img src="~/images/partner-2.png" class="img-fluid" alt="Partner 2">
            </div>
            <div class="col-md-3 col-6 mb-4">
                <img src="~/images/partner-3.png" class="img-fluid" alt="Partner 3">
            </div>
            <div class="col-md-3 col-6 mb-4">
                <img src="~/images/partner-4.png" class="img-fluid" alt="Partner 4">
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter-section py-5 bg-primary text-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h3 class="mb-4">Đăng ký nhận thông tin</h3>
                <p class="mb-4">Nhận thông tin về khuyến mãi và sự kiện mới nhất từ chúng tôi</p>
                <form class="newsletter-form">
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="Email của bạn" required>
                        <button class="btn btn-light" type="submit">Đăng ký</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- CSS Styles -->
<style>
    html, body {
        margin: 0;
        padding: 0;
        scroll-behavior: smooth;
    }

    .hero-section {
        height: 100vh;
        position: relative;
        overflow: hidden;
    }

    .hero-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -2;
    }


    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.5);
        z-index: -1;
    }

    .hero-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 2;
        text-align: center;
        max-width: 600px;
        color: white;
    }

        .hero-text h1 {
            font-size: 48px;
            margin-bottom: 20px;
            font-weight: 700;
        }

        .hero-text p {
            font-size: 20px;
            margin-bottom: 30px;
        }

    .scroll-indicator {
        position: absolute;
        bottom: 20px;
        right: 30px;
        text-align: center;
        z-index: 2;
        color: #fff;
        font-size: 14px;
        font-weight: bold;
    }

        .scroll-indicator i {
            display: block;
            font-size: 24px;
            margin-top: 5px;
            animation: bounce 1.5s infinite;
        }

    @@keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(6px);
        }
    }

    }

    header.navbar, .navbar {
        background: transparent !important;
        position: absolute;
        top: 0;
        width: 100%;
        z-index: 10;
    }

    .section-title {
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 40px;
        position: relative;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background: #0d6efd;
        }

    .service-card {
        text-align: center;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s;
        background: white;
    }

        .service-card:hover {
            transform: translateY(-10px);
        }

    .service-icon {
        font-size: 48px;
        color: #0d6efd;
        margin-bottom: 20px;
    }

    .news-card {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        background: white;
    }

        .news-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

    .news-content {
        padding: 20px;
    }

    .partners-section img {
        max-height: 80px;
        filter: grayscale(100%);
        opacity: 0.7;
        transition: all 0.3s;
    }

        .partners-section img:hover {
            filter: grayscale(0);
            opacity: 1;
        }

    .newsletter-form .form-control {
        height: 50px;
        border-radius: 25px 0 0 25px;
        border: none;
    }

    .newsletter-form .btn {
        border-radius: 0 25px 25px 0;
        padding: 0 30px;
    }
</style>
