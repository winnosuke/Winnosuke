@model Winnosuke.Models.Service
@{
    ViewData["Title"] = "Chỉnh sửa dịch vụ";
}

<h2>Chỉnh sửa dịch vụ</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ServiceId" />
    <div class="form-group">
        <label asp-for="ServiceName"></label>
        <input asp-for="ServiceName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="image_url">URL ảnh</label>
        <input asp-for="image_url" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="AdminList" class="btn btn-secondary">Hủy</a>
</form>
